@model DepremTirProjesi.Models.TirİcerikBilgisi
@{
    ViewData["Title"] = "TirİcerikBilgisiGet";
    Layout = "~/Views/Shared/_ProjeLayout.cshtml";
}

@using (Html.BeginForm("TirİcerikBilgisiGuncelle", "TirİcerikBilgisi", FormMethod.Post))
{
    @Html.Label("Id ")
    @Html.TextBoxFor(x=>x.TirId , new{@class="form-control"} )

    <br />
    @Html.Label("Tır Plaka ")
    @Html.TextBoxFor(x=>x.TirPlaka , new{@class="form-control"} )


    <br />
    @Html.LabelFor(x=>x.Sehir.SehirAdi,new { @class = "form-control" })
    @Html.DropDownListFor(x=>x.SehirId,(List<SelectListItem>)ViewBag.v1,  new { @class = "form-control" })
    <br />

    <br />
    @Html.LabelFor(x=>x.Ilce.IlceAdi,new { @class = "form-control" })
    @Html.DropDownListFor(x=>x.IlceId,(List<SelectListItem>)ViewBag.v2,  new { @class = "form-control" })
    <br />

    @Html.LabelFor(x=>x.Malzeme.MalzemeAd,new { @class = "form-control" })
    @Html.DropDownListFor(x=>x.MalzemeId,(List<SelectListItem>)ViewBag.v3,  new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
    }