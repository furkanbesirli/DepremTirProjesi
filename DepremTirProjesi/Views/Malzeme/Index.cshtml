@model List<DepremTirProjesi.Models.Malzeme>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ProjeLayout.cshtml";
}

<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Malzeme Ad</th>
        <th>Kategori ID</th>
        <th>Stok</th>
        <th>Delete</th>
        <th>Update</th>
        
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.MalzemeId</td>
            <td>@x.MalzemeAd</td>
            <td>@x.KategoriId</td>
            <td>@x.MalzemeStok</td>
            <td><a href="#" class="btn btn-danger">Delete</a></td>
            <td><a href="/Malzeme/MalzemeGet/@x.MalzemeId" class="btn btn-warning">Guncelle</a></td>
        </tr>
    }

</table>
<a href="/Malzeme/MalzemeEkle/" class="btn btn-primary">Malzeme Ekle</a>